<h1>Listing mail_users</h1>

<table>
  <tr>
    <th>Mail name</th>
    <th>Mail email</th>
    <th>Mail login</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @mail_users.each do |mail_user| %>
  <tr>
    <td><%= mail_user.mail_name %></td>
    <td><%= mail_user.mail_email %></td>
    <td><%= mail_user.mail_login %></td>
    <td><%= link_to 'Show', mail_user %></td>
    <td><%= link_to 'Edit', edit_mail_user_path(mail_user) %></td>
    <td><%= link_to 'Destroy', mail_user, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

